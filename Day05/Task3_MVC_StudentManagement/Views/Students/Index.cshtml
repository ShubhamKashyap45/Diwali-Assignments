@model IEnumerable<StudentManagement.Models.Student>
@{ ViewData["Title"] = "Index"; }
<h2>Students</h2>
<p><a class="btn btn-primary" href="/Students/Create">Create New</a></p>
<table class="table table-striped"><thead><tr><th>ID</th><th>Name</th><th>Birth Date</th><th>School</th><th>Percentage</th><th></th></tr></thead><tbody>
@foreach (var item in Model) {
    <tr>
        <td>@item.Id</td><td>@item.Name</td><td>@item.BirthDate.ToShortDateString()</td><td>@item.SchoolName</td><td>@item.Percentage</td>
        <td>
            <a class="btn btn-sm btn-info" href="/Students/Details/@item.Id">Details</a>
            <a class="btn btn-sm btn-warning" href="/Students/Edit/@item.Id">Edit</a>
            <a class="btn btn-sm btn-danger" href="/Students/Delete/@item.Id">Delete</a>
        </td>
    </tr>
}
</tbody></table>
