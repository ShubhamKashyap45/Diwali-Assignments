@model StudentManagement.Models.Student
@{ ViewData["Title"] = "Student Details"; }
<h2>Details</h2>
<dl class="row">
    <dt class="col-sm-2">ID</dt><dd class="col-sm-10">@Model.StudentID</dd>
    <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
    <dt class="col-sm-2">DOB</dt><dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>
    <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Phone</dt><dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>
<a class="btn btn-secondary" href="/Students">Back</a>
