@model IEnumerable<StudentManagement.Models.Student>
@{ ViewData["Title"] = "Students"; }
<h2>Students</h2>
<p><a class="btn btn-primary" href="/Students/Create">Create New</a></p>
<table class="table table-striped">
    <thead><tr><th>ID</th><th>Name</th><th>Email</th><th>Phone</th><th></th></tr></thead>
    <tbody>
    @foreach(var s in Model) {
        <tr>
            <td>@s.StudentID</td>
            <td>@(s.FirstName + " " + s.LastName)</td>
            <td>@s.Email</td>
            <td>@s.PhoneNumber</td>
            <td>
                <a class="btn btn-sm btn-info" href="/Students/Details/@s.StudentID">Details</a>
                <a class="btn btn-sm btn-warning" href="/Students/Edit/@s.StudentID">Edit</a>
                <a class="btn btn-sm btn-danger" href="/Students/Delete/@s.StudentID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
