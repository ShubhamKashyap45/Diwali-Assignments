@model StudentManagement.Models.Student
@{ ViewData["Title"] = "Delete Student"; }
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
    <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Students">Cancel</a>
</form>
